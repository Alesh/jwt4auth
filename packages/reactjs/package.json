{
  "version": "0.1.0",
  "name": "@jwt4auth/reactjs",
  "author": "Alesh <alexey.poryadin@gmail.com>",
  "description": "This package contains the javascript client of the jwt4auth library.",
  "homepage": "https://github.com/Alesh/jwt4auth",
  "license": "LGPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Alesh/jwt4auth.git",
    "directory": "jwt4auth/reactjs"
  },
  "main": "dist/index.js",
  "module": "dist/reactjs.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "README.md",
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "watch": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --passWithNoTests",
    "lint": "tsdx lint",
    "prepare": "tsdx build",
    "size": "size-limit",
    "analyze": "size-limit --why",
    "prepublish": "npm run build"
  },
  "peerDependencies": {
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsdx lint"
    }
  },
  "size-limit": [
    {
      "path": "dist/reactjs.cjs.production.min.js",
      "limit": "10 KB"
    },
    {
      "path": "dist/reactjs.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@jwt4auth/general": "*",
    "@size-limit/preset-small-lib": "^4.7.0",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "husky": "^4.3.0",
    "size-limit": "^4.7.0",
    "tsdx": "^0.14.1",
    "tslib": "^2.0.3",
    "typescript": "^3.9.7"
  },
  "publishConfig": {
    "access": "public"
  }
}